<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.subram43purdue.travelplanner.LeisureEventActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/leisure_event_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="@+id/leisure_event_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/leisure_event_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="6dp"
        android:fontFamily="casual"
        android:text="Leisure Event"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/leisure_event_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/leisure_event_name_text_view"
        android:layout_width="62dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:text="Event Name:"
        app:layout_constraintBottom_toBottomOf="@+id/leisure_event_name"
        app:layout_constraintEnd_toEndOf="@+id/leisure_event_date_text_view"
        app:layout_constraintStart_toEndOf="@+id/leisure_event_date_text_view"
        app:layout_constraintTop_toTopOf="@+id/leisure_event_name" />

    <TextView
        android:id="@+id/leisure_event_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginBottom="131dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="130dp"
        android:fontFamily="casual"
        android:text="Date:"
        app:layout_constraintBottom_toBottomOf="@+id/leisure_event_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <TextView
        android:id="@+id/leisure_event_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_marginStart="16dp"
        android:fontFamily="casual"
        android:text="Time:"
        app:layout_constraintBottom_toTopOf="@+id/leisure_event_location_text_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/leisure_event_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:fontFamily="casual"
        android:text="Location:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/leisure_event_location" />

    <TextView
        android:id="@+id/leisure_event_notes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:fontFamily="casual"
        android:text="Notes:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leisure_event_location_text_view" />

    <EditText
        android:id="@+id/leisure_event_name"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/leisure_event_date"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/leisure_event_date"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/leisure_event_date"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:focusable="false"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="@+id/leisure_event_time"
        app:layout_constraintStart_toStartOf="@+id/leisure_event_time"
        app:layout_constraintTop_toBottomOf="@+id/leisure_event_name" />

    <EditText
        android:id="@+id/leisure_event_time"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:focusable="false"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="@+id/leisure_event_location"
        app:layout_constraintStart_toStartOf="@+id/leisure_event_location"
        app:layout_constraintTop_toBottomOf="@+id/leisure_event_date" />

    <EditText
        android:id="@+id/leisure_event_location"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/leisure_event_notes"
        app:layout_constraintStart_toStartOf="@+id/leisure_event_notes"
        app:layout_constraintTop_toBottomOf="@+id/leisure_event_time" />

    <EditText
        android:id="@+id/leisure_event_notes"
        android:layout_width="262dp"
        android:layout_height="136dp"
        android:layout_marginBottom="111dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="111dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/leisure_event_time_text_view" />

    <Button
        android:id="@+id/leisure_create_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Create Event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leisure_event_notes" />

    <Button
        android:id="@+id/leisure_cancel_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/leisure_create_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leisure_event_notes" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <ImageButton
        android:id="@+id/delete_leisure_event_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_delete"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
